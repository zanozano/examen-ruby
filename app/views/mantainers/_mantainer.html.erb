<div id="<%= dom_id mantainer %>" class="card mb-2">
  <div class="card-body">
    <p class="card-text">
      <strong>Type equipment:</strong>
      <%= mantainer.equipment ? mantainer.equipment.name : "Pendiente" %>
    </p>

    <p class="card-text">
      <strong>Type support:</strong>
      <%= mantainer.support_type %>
    </p>

    <p class="card-text">
      <strong>Name:</strong>
      <%= mantainer.name %>
    </p>

    <p class="card-text">
      <strong>City:</strong>
      <%= mantainer.city %>
    </p>

    <p class="card-text">
      <strong>Material:</strong>
      <%= mantainer.material %>
    </p>

    <p class="card-text">
      <strong>Modified by:</strong>
      <%= mantainer.modified_by_email || "No disponible" %>
    </p>

<% if mantainer.photo.present? %>
  <div class="d-flex justify-content-center align-items-center">
    <%= image_tag mantainer.photo.url, class: "card-img-top mx-auto", style: "max-width: 200px; max-height: 200px;" %>
  </div>
<% else %>
  <div class="d-flex justify-content-center align-items-center">
    <%= image_tag "default.png", class: "card-img-top mx-auto", style: "max-width: 200px; max-height: 200px;" %>
  </div>
<% end %>
<hr>
    <% if action_name == "index" %>
      <%= link_to "Mostrar", mantainer, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
