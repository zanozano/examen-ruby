<div class="container">
  <% if notice.present? %>
    <div id="success-alert" class="alert alert-success" role="alert">
      <%= notice %>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var successAlert = document.getElementById('success-alert');

        setTimeout(function() {
          successAlert.style.display = 'none';
        }, 6000);
      });
    </script>
  <% end %>
  <div class="header">
    <h1 class="header__h1">Equipment</h1>
    <%= link_to new_equipment_path, class: "button success" do %>
      New Equipment
      <%= image_tag "new-icon.svg", alt: "New Icon", class: "button__icon" %>
    <% end %>
  </div>
  <%#  %>
  <div id="equipment">
    <%#  %>
    <div class="item-container">
      <% @equipment.each do |equipment| %>
        <%= render equipment %>
      <% end %>
    </div>
    <%#  %>
    <div>
      <%= will_paginate @equipment, class: "pagination justify-content-center" do |paginator| %>
        <%= paginator.page_numbers class: "page-item" %>
        <%= paginator.previous_page class: "page-item" %>
        <%= paginator.next_page class: "page-item" %>
      <% end %>
    </div>
  </div>
