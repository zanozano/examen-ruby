<div class="col-4 mx-auto">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-center fw-bold mb-4">Maintainers</h1>
  <%= link_to "New maintainer", new_maintainer_path, class: "btn btn-success mb-2"%>

  <div id="maintainers">
    <% @maintainers.each do |maintainer| %>
      <%= render maintainer %>
    <% end %>
    <div>
      <%= will_paginate @maintainers, class: "pagination justify-content-center" do |maintainer| %>
        <%= maintainer.page_numbers class: "page-item" %>
        <%= maintainer.previous_page class: "page-item" %>
        <%= maintainer.next_page class: "page-item" %>
      <% end %>
    </div>
  </div>

</div>
