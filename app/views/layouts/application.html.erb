<!DOCTYPE html>
<html>
<head>
  <title>FullClima</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body style="padding-top: 70px;">
 
<nav class="navbar navbar-expand-lg bg-light fixed-top">
  <div class="container">
    <a class="navbar-brand" href="/">FullClima</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link <%= 'active' if current_page?(terms_path) %>" href="/terms">Terms</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= 'active' if current_page?(contact_path) %>" href="/contact">Contact</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Sign up</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mb-4">
<%# Message %>
  <% if flash[:success] %>
    <div id="flash-message" class="alert alert-success" role="alert">
      <%= flash[:success] %>
    </div>
  <% end %>
  <%= yield %>
</div>

<script>
  setTimeout(function() {
    document.getElementById('flash-message').style.display = 'none';
  }, 6000);
</script>
</body>
</html>
